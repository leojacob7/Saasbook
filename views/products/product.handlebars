  }
  $('.closeBtn').click(function () {
    $('#MyDiv').hide()
    $('.mask').hide()
  })
  function DeleteInfo (reviewId) {
    console.log(reviewId)
    jQuery.ajax({
      type: 'Post',
      async: true,
      url: 'http://localhost:3000/reviews/delete',
      data: { reviewId },
